#include "data.h"

void fakultet::assignClass(string jmbag, int classroom_id) {
	studentsAndClassrooms[jmbag] = classroom_id;
};

int fakultet::getClassroomIDfor(string jmbag) {
	return studentsAndClassrooms[jmbag];
};

int fakultet::getNoStudentsIn(int classroom_id) {
	int no_students = 0;
	map<string, int>::iterator mi;
	for (mi = studentsAndClassrooms.begin(); mi != studentsAndClassrooms.end(); mi++) {
		if(mi->second == classroom_id) {
			++no_students;
		}
	}
	return no_students;
};
